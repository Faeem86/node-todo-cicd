<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Todo List APP - Dark & Fabulous Edition</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
                color: #f5f5f5;
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
                align-items: center;
                min-height: 100vh;
            }

            h1 {
                background: linear-gradient(to right, #ff416c, #ff4b2b);
                color: white;
                margin: 0;
                padding: 20px;
                text-align: center;
                width: 100%;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                text-transform: uppercase;
            }

            ul {
                list-style: none;
                padding: 0;
                width: 90%;
                max-width: 600px;
                margin: 20px 0;
            }

            ul li {
                background: #333;
                border-radius: 8px;
                border: 1px solid #555;
                margin-bottom: 10px;
                padding: 15px;
                position: relative;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: transform 0.2s ease-in-out, background 0.2s ease-in-out;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            ul li:hover {
                transform: scale(1.02);
                background: #444;
            }

            ul li a {
                color: #f5f5f5;
                text-decoration: none;
                font-weight: bold;
            }

            ul li a:hover {
                color: #ff416c;
            }

            .delete-btn, .edit-btn {
                font-size: 20px;
                text-decoration: none;
                margin-left: 10px;
                cursor: pointer;
            }

            .delete-btn {
                color: #ff4b2b;
            }

            .edit-btn {
                color: #FFC107;
            }

            form {
                background: #333;
                padding: 20px;
                margin-top: 20px;
                border-radius: 8px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                width: 90%;
                max-width: 600px;
            }

            label {
                display: block;
                margin-bottom: 10px;
                font-size: 18px;
                font-weight: bold;
            }

            input[type="text"] {
                width: 100%;
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #555;
                border-radius: 4px;
                background: #444;
                color: #f5f5f5;
            }

            input[type="submit"] {
                background-color: #ff416c;
                color: white;
                border: none;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 4px;
                transition: background-color 0.2s ease-in-out;
            }

            input[type="submit"]:hover {
                background-color: #ff4b2b;
            }

            @media (max-width: 600px) {
                h1 {
                    padding: 15px;
                    font-size: 24px;
                }

                ul li {
                    padding: 10px;
                    font-size: 16px;
                }

                .delete-btn, .edit-btn {
                    font-size: 18px;
                }

                form {
                    padding: 15px;
                }

                label {
                    font-size: 16px;
                }

                input[type="text"] {
                    padding: 8px;
                }

                input[type="submit"] {
                    padding: 8px 16px;
                }
            }
        </style>
    </head>

    <body>
        <h1>Todo List - Dark & Fabulous Edition</h1>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <span><%- todo %></span>
                <span>
                    <a href="/todo/delete/<%= index %>" class="delete-btn">✘</a>
                    <a href="/todo/<%= index %>" class="edit-btn">✎</a>
                </span>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <label for="newtodo">What should I do?</label>
            <input type="text" name="newtodo" id="newtodo" autofocus />
            <input type="submit" value="Add" />
        </form>
    </body>
</html>
